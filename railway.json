{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd server && npm install --only=production"
  },
  "deploy": {
    "startCommand": "cd server && node server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "nixpacksConfig": {
    "nodeVersion": "18"
  }
}
